{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": {
            "options": [240]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": ["debug", "log", "time", "timeEnd", "trace"]
        },
        "quotemark": [true, "single"],
        "semicolon": [true, "always"],
        "arrow-return-shorthand": [true, "never"]
    },
    "jsRules": {
        "max-line-length": {
            "options": [240]
        }
    }
}